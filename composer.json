{
  "name": "tommy8699/farm-sound",
  "type": "library",
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse",
    "cs:fix": "php-cs-fixer fix --diff --verbose",
    "cs:check": "php-cs-fixer fix --dry-run --diff --verbose",
    "qa": [
      "@cs:check",
      "@stan",
      "@test"
    ]
  }
}
